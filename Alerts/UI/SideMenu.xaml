<UserControl x:Class="Alerts.UI.SideMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alerts.UI"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="100" Background="Black">
    <StackPanel>
        <Button HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderThickness="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Button.Template>
            <StackPanel Width="80" Height="80" Margin="10">
                <svgc:SvgViewbox Source="/UI/icons/ButtonIcons/ic_add_circle_outline_white_24px.svg" Width="40" Height="50"></svgc:SvgViewbox>
                <Label Content="Norification" Foreground="White" FontFamily="Courier" FontWeight="SemiBold" HorizontalAlignment="Center" ></Label>
            </StackPanel>
        </Button>


    </StackPanel>
</UserControl>