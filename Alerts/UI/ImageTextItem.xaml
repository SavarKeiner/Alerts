<UserControl x:Class="Alerts.UI.ImageTextItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alerts.UI"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150">
    <StackPanel Orientation="Horizontal">
        <svgc:SvgViewbox x:Name="image" Width="25" Height="25" Margin="2.5, 2.5, 2.5, 2.5"></svgc:SvgViewbox>
        <Label x:Name="text" VerticalContentAlignment="Center" FontFamily="Courier" FontWeight="SemiBold" Foreground="White" FontSize="16"></Label>
        
        
        <!--<Image Margin="0,0,0,-15" Source="/Alerts;component/UI/CoinIcons/btc.png" Stretch="Fill" Width="50"/>-->

    </StackPanel>
</UserControl>
