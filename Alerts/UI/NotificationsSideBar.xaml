<UserControl x:Class="Alerts.UI.NotificationsSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alerts.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="500">
    <Grid>
        <Border BorderThickness="0,0,1,0" BorderBrush="#2E3D5A">
            <ScrollViewer Background="#3063ad" BorderThickness="0,0,1,0" BorderBrush="#2E3D5A" Width="500" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="notificationsList"></StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
