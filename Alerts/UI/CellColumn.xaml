<UserControl x:Class="Alerts.UI.CellColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alerts.UI"
             xmlns:control = "clr-namespace:Alerts.UI"
             mc:Ignorable="d" 
             d:DesignHeight="100" SizeChanged="UserControl_SizeChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    
    <Border  BorderThickness="0,0,0.5,0.5" BorderBrush="White">
        <StackPanel x:Name="columnList">
            
            <Label Grid.Row="0" x:Name="labelCandlestickWidth" Content="labelCandlestickWidth" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="AliceBlue" Height="25" FontSize="14" FontWeight="Bold" FontFamily="Courier"></Label>

            <StackPanel Grid.Row="1" x:Name="indicatorList" HorizontalAlignment="Stretch">

            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
