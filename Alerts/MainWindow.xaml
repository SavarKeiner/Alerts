<Window x:Class="Alerts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alerts"
        xmlns:control = "clr-namespace:Alerts.UI" 
        mc:Ignorable="d"
        Title="MainWindow" Width="1280" Height="720" SizeChanged="Window_SizeChanged" x:Name="mW" Background="Yellow">
    <Canvas>

            <StackPanel x:Name="listCellCoin" Canvas.Left="{Binding ActualWidth, ElementName=sideMenu}">

            </StackPanel>

            <control:SideBar x:Name="sideBar" Canvas.Left="100" Canvas.Top="0" Height="{Binding ActualHeight, ElementName=mW}"></control:SideBar>
        <control:SideMenu x:Name="sideMenu" Canvas.Top="0" Canvas.Left="0" Height="{Binding ActualHeight, ElementName=mW}"></control:SideMenu>
    </Canvas>
</Window>
